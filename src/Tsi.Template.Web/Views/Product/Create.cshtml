@using Tsi.Template.ViewModels.Catalog;
@model ProductViewModel

@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card card-primary">

    <div class="card-header">
        <h3 class="card-title">Create product</h3>
    </div>

   

    <form asp-controller="Product" asp-action="Create" method="post" role="form">
        <div class="card-body" asp-validation-summary="All">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Code)
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Libelle)
                <input type="text" id="Libelle" name="Libelle" class="form-control" value="@Model.Libelle" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.Price)</label>
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>



        </div>

        <div class="card-footer">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i> Save
            </button>
        </div>
    </form>
</div>